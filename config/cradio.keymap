#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

// Layer numbers definition
#define ALP 0
#define SYM 1
#define NUM 2

// Home row mods macro
#define HRML(k1,k2,k3,k4) &hm LGUI k1  &hm LALT k2  &hm LCTRL k3  &hm LSHIFT k4
#define HRMR(k1,k2,k3,k4) &hm RSHIFT k1  &hm RCTRL k2  &hm RALT k3  &hm LGUI k4

// Arrow key CTRL mods macro
#define LCARR(k1) &td LC(k1) k1

/ {
    behaviors {
        hm: homerow_mod {
            label = "HOMEROW_MOD";
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <300>;
            quick-tap-ms = <250>;
            bindings = <&kp>, <&kp>;
        };
        hl: homerow_layer {
			compatible = "zmk,behavior-hold-tap";
			label = "HOMEROW_LAYER";
			#binding-cells = <2>;
			tapping-term-ms = <220>;
			quick-tap-ms = <250>;
			flavor = "tap-preferred";
			bindings = <&mo>, <&kp>;
        };
    	td: tapdance {
			compatible = "zmk,behavior-hold-tap";
			label = "TAPDANCE";
			#binding-cells = <2>;
			tapping-term-ms = <190>;
			quick-tap-ms = <250>;
			flavor = "tap-preferred";
			bindings = <&kp>, <&kp>;
		};
        skm: sticky_key_modifier {
            label = "STICKY_KEY_MODIFIER";
            compatible = "zmk,behavior-sticky-key";
            #binding-cells = <1>;
            release-after-ms = <1000>;
            quick-release;
            ignore-modifiers;
            bindings = <&kp>;
        };
        caps: caps_word_lock {
			compatible = "zmk,behavior-hold-tap";
			label = "CAPS_WORD_LOCK";
			#binding-cells = <2>;
			tapping-term-ms = <190>;
			quick-tap-ms = <250>;
			flavor = "tap-preferred";
			bindings = <&kp>, <&caps_word>;
		};
    };

    keymap {
        compatible = "zmk,keymap";
        default_layer {
            bindings = <
        //╭──────────────┬──────────────┬──────────────┬──────────────┬──────────────╮   ╭──────────────┬──────────────┬──────────────┬──────────────┬──────────────╮
        //│  Q Å         │  W           │  F           │  P           │  B           │   │  J           │  L           │  U Æ         │  Y Ø         │  ? !         │
            &kp Q          &kp W          &kp F          &kp P          &kp B              &kp J          &kp L          &kp U          &kp Y          &td EXCL QMARK
        //├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤   ├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤
        //│  A LGUI      │  R LALT      │  S LCTRL     │  T LSHIFT    │  G           │   │  M           │  N RSHIFT    │  E RCTRL     │  I RALT      │  O RGUI      │
            HRML(A,        R,             S,             T)             &kp G              &kp M          HRMR(N,        E,             I,             O)
        //├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤   ├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤
        //│  Z           │  X           │  C           │  D           │  V           │   │  K           │  H           │  , ;         │  . :         │  ' "         │
            &kp Z          &kp X          &kp C          &kp D          &kp V              &kp K          &kp H         &td SEMI COMMA  &td COLON DOT  &td DQT SQT
        //╰──────────────┴──────────────┴──────────────┼──────────────┼──────────────┤   ├──────────────┼──────────────┼──────────────┴──────────────┴──────────────╯
        //                                             │  SPACE       │  TAB NUM     │   │  ENTER SYM   │  BSPC        │
                                                         &kp SPACE      &hl NUM TAB        &hl SYM ENTER  &kp BSPC
        //                                             ╰──────────────┴──────────────╯   ╰──────────────┴──────────────╯
            >;
        };

        symbols {
            bindings = <
        //╭──────────────┬──────────────┬──────────────┬──────────────┬──────────────╮   ╭──────────────┬──────────────┬──────────────┬──────────────┬──────────────╮
        //│  €           │  #           │  < \leq      │  > \geq      │  @           │   │  ∈ ∉         │  → ⇒        │  ↔ ⇔        │  ⊂ ⊆         │              │
            &kp A          &kp A          &kp A          &kp A          &kp A              &kp A          &kp A          &kp A          &kp A          &kp A
        //├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤   ├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤
        //│  -           │  +           │  ( \left     │  ) \right    │  $ $$        │   │  | ∨         │  / \frac     │  \           │  = \neq      │ * \cdot      │
            &kp A          &kp A          &kp A          &kp A          &kp A              &kp A          &kp A          &kp A          &kp A          &kp A
        //├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤   ├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤
        //│              │              │  { \{        │  } \}        │  ~ ¬         │   │  & ∧         │  [ \[        │  ] \]        │  %           │  ^           │
            &kp A          &kp A          &kp A          &kp A          &kp A              &kp A          &kp A          &kp A          &kp A          &kp A
        //╰──────────────┴──────────────┴──────────────┼──────────────┼──────────────┤   ├──────────────┼──────────────┼──────────────┴──────────────┴──────────────╯
        //                                             │  SPACE       │  TAB         │   │  ENTER       │  BSPC        │
                                                         &kp A          &kp A              &kp A          &kp A
        //                                             ╰──────────────┴──────────────╯   ╰──────────────┴──────────────╯
            >;
        };

        numbers {
            bindings = <
        //╭──────────────┬──────────────┬──────────────┬──────────────┬──────────────╮   ╭──────────────┬──────────────┬──────────────┬──────────────┬──────────────╮
        //│  ESC         │  VOL DOWN    │  UP +LC      │  VOL UP      │  HOME        │   │              │  7           │  8           │  9           │              │ VOL DOWN + VOL UP = MUTE
            &kp ESC        &kp C_VOL_DN   &td LC(UP) UP  &kp C_VOL_UP   &kp HOME           &kp A          &kp A          &kp A          &kp A          &kp A
        //├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤   ├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤
        //│  CAPS WL     │  LEFT +LC    │  DOWN +LC    │  RIGHT +LC   │  END         │   │  0           │  4           │  5           │  6           │              │
            &caps CAPS 0   &td LC(LEFT) LEFT  &td LC(DOWN) DOWN  &td LC(RIGHT) RIGHT  &kp END  &kp A      &kp A          &kp A          &kp A          &kp A          &kp A
        //├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤   ├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤
        //│  PSCRN LSHFT │  MED BACK    │  MED PAUSE   │  MED FWD     │              │   │              │  1           │  2           │  3           │              │
            &hm LSHFT PSCRN  &kp A        &kp A          &kp A          &kp A              &kp A          &kp A          &kp A          &kp A          &kp A
        //╰──────────────┴──────────────┴──────────────┼──────────────┼──────────────┤   ├──────────────┼──────────────┼──────────────┴──────────────┴──────────────╯
        //                                             │              │              │   │              │              │
                                                         &kp A          &kp A              &kp A          &kp A
        //                                             ╰──────────────┴──────────────╯   ╰──────────────┴──────────────╯
            >;
        };
    };
};
